{
  "name": "orma-carbon",
  "version": "0.1.0",
  "description": "Typescript+Express+Jest boilerplate",
  "author": "ZauJulio<zaujulio.dev@gmail.com>",
  "repository": "git@github.com:ZauJulio/backend-test-two.git",
  "main": "src/main.ts",
  "license": "MIT",
  "scripts": {
    "tsnd": "ts-node-dev -r tsconfig-paths/register",
    "start": "node dist/main.js",
    "build": "tsc && tsc-alias",
    "dev": "DEBUG=* npm run tsnd src/main.ts",
    "typeorm:cli": "typeorm-ts-node-commonjs -d ./src/database/index.ts --",
    "migrate:up": "npm run typeorm:cli migration:run",
    "migrate:down": "npm run typeorm:cli migration:revert",
    "migrate:show": "npm run typeorm:cli migration:show",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts\" --fix .",
    "format": "prettier \"src/**/*.ts\" -u -w",
    "scan": "./scripts/sonar-scanner.sh",
    "prepare": "husky install",
    "unprepare": "husky uninstall"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.1",
    "mongodb": "^4.14.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.12",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4"
  }
}
